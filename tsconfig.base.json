{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",  // ✅ Modern
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "lib": ["DOM", "ES2020"],
    
    // ✅ For packages:
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true
  }
}