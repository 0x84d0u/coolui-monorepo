{
  "compilerOptions": {
    /* Core compilation settings */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Bundler",
    
    /* React compatibility */
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    /* Type safety */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Declaration generation defaults */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    /* Default output directory - packages can override */
    "outDir": "dist"
    
    /* Note: noEmit is NOT set here - let packages decide */
  }
}