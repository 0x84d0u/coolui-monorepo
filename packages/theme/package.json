{
  "name": "@coolui/theme",
  "version": "1.0.0",
  "description": "A collection of beautiful, accessible React components for Next.js",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/coolui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/coolui.git",
    "directory": "packages/cool"
  },
  "bugs": {
    "url": "https://github.com/yourusername/coolui/issues"
  },
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./preset.css": "./dist/preset.css",
    "./package.json": "./package.json"
  },
  "main": "./dist/server.cjs",
  "module": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:css": "tailwindcss -i ./source/styles/index.css -o ./dist/styles.css --minify",
    "build:ts": "tsup",
    "build": "rm -rf dist && pnpm run build:ts && npm run build:css",
    "dev:ts": "tsup --watch",
    "dev:css": "tailwindcss -i ./source/styles/index.css -o ./dist/styles.css --watch",
    "dev": "concurrently \"pnpm run dev:ts\" \"pnpm run dev:css\"",
    "clean": "rm -rf dist .turbo node_modules/.cache",
    "typecheck": "tsc --noEmit",
    "lint": "eslint source --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint source --ext .ts,.tsx --fix",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "dependencies": {
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "keywords": [
    "react",
    "nextjs",
    "components",
    "ui",
    "library",
    "typescript",
    "react-server-components",
    "rsc"
  ],
  "publishConfig": {
    "access": "public"
  }
}