{
  "name": "@coolui/styles",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./index.css": "./dist/index.css",
    "./preset.css": "./source/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && tailwindcss -i ./source/index.css -o ./dist/index.css --minify",
    "dev": "tailwindcss -i ./source/index.css -o ./dist/index.css --watch",
    "clean": "rm -rf dist .turbo node_modules/.cache",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0"
  }
}