{
  "name": "@coolui/layout",
  "version": "1.0.0",
  "description": "A collection of beautiful, accessible React components for Next.js",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/coolui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/coolui.git",
    "directory": "packages/cool"
  },
  "bugs": {
    "url": "https://github.com/yourusername/coolui/issues"
  },
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "main": "./dist/server.cjs",
  "module": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./styles.css": "./source/styles/index.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo node_modules/.cache",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "tailwindcss": "^4",
    "@coolui/styles": "workspace:*",
    "@coolui/core": "workspace:*",
    "@coolui/typography": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "keywords": [
    "react",
    "nextjs",
    "components",
    "ui",
    "library",
    "typescript",
    "react-server-components",
    "rsc"
  ],
  "publishConfig": {
    "access": "public"
  }
}